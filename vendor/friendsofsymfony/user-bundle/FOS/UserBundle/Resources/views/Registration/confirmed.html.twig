
{% extends "TunisiaMallTMBundle::clientView/layout.html.twig" %}

{% block body2 %}
    <p class="brand">{{ 'registration.confirmed'|trans({'%username%': user.username}, 'FOSUserBundle') }}</p>
    {% if app.session is not empty %}
        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
        {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans({}, 'FOSUserBundle') }}</a></p>{% endif %}
    {% endif %}
    {{ render(controller('TunisiaMallTMBundle:clientController/CIndex:index')) }}
{% endblock body2 %}
